azul = #1E90BD
blanco = #fff
nar = #FFA95C
azTexto = #5D8CAC
body
	padding-right 10%
	padding-left 10%
header
	background azul
	color blanco
	position absolute
	width 80%
	height 85px
	figure 
		float left
	#botones 
		margin-right 10px
		float right
		ul
			list-style none
			li
				display inline-block
				margin-left 10px
	#secciones
		margin 35px 0 0 350px
		font-size 16px
		ul
			list-style none
			li
				display inline-block
				margin-left 30px
				transition 0.6s
			li:hover
				cursor pointer
				color nar
				margin-left 30px
				padding-bottom 10px
				border-bottom 15px solid nar
section 
	padding-top 86px
	#slider
		h2
			color #BD4B1E
		h3
			font-size 24px
			color #2D4D6A
	#presentacion
		padding 45px 0 0 70px 
		color #666
	#titulares
		text-align center
		.cajaTit
			color #666
			display inline-block
			height 225px
			margin-left 30px
			padding 10px
			vertical-align middle
			width 300px
			h1
				color azTexto
				margin 0px
				font-size 16px
				text-align left
			p 
				text-align left
		#ejecucionProyectos
			background #fafafa
	#pieTitulares
		margin-top 40px
		background azul
		height 300px
		width 100%
		#sociales
			background #333
			height 300px
			width 100px
			div
				margin 20px 0 0 20px 
				img
					height 40px
		.cajaPieTit
			background #ddd
			width 200px
			height 200px
			display inline-block
			vertical-align middle
footer
	height 50px
			



	
azul = #1E90BD
blanco = #fff
nar = #FFA95C
azTexto = #5D8CAC
body
	padding-right 10%
	padding-left 10%
	font-family 'Open Sans'
header
	background azul
	color blanco
	position absolute
	width 80%
	height 85px
	figure 
		float left
	#botones 
		margin-right 10px
		float right
		ul
			list-style none
			li
				display inline-block
			li:hover
				opacity 0.4
				cursor pointer
				transition 0.3s
	#secciones
		margin 35px 0 0 350px
		font-size 16px
		ul
			list-style none
			li
				display inline-block
				margin-left 30px
				transition 0.6s
			li:hover
				cursor pointer
				color nar
				margin-left 30px
				padding-bottom 10px
				border-bottom 15px solid nar
section 
	padding-top 86px
	#slider
		h2
			color #BD4B1E
		h3
			font-size 24px
			color #2D4D6A
	#presentacion
		padding 45px 0 0 70px 
		color #666
	#titulares
		text-align center
		.cajaTit
			color #666
			display inline-block
			height 240px
			margin-left 30px
			padding 10px
			vertical-align middle
			width 300px
			a 
				text-decoration none
			h1
				color azTexto
				margin 0px
				font-size 16px
				text-align left
			p 
				text-align left		
		#ejecucionProyectos
			background #f6f6f6
		.lineaPuenteada
			color azTexto

	#pieTitulares
		color #E2EEF3
		margin-top 40px
		background azul
		height 300px
		width 100%
		#sociales
			margin-right 60px
			height 300px
			width 64px
			div
				margin 20px 0 30px 9px
				transition 0.5s
				img
					height 40px
			div:hover
				opacity 0.5
				cursor pointer
				transition 0.5s
				

		.cajaPieTit
			width 280px
			height 280px
			display inline-block
			vertical-align middle
		#cajaPieTit3
			padding-left 50px
			img
				vertical-align top
footer
	background azul
	border-top 2px solid #E2EEF3
	color #E2EEF3
	height 50px
	width 80%
	position absolute
	text-align right
	p 
		margin 0px 10px 2px 0

	img 
		float left
		height 48px
		

			



	
azul = #1E90BD
blanco = #fff
nar = #FFA95C
azTexto = #5D8CAC
body
	padding-right 10%
	padding-left 10%
	font-family 'Open Sans'
header
	background azul
	color blanco
	position absolute
	width 80%
	height 85px
	figure 
		float left
	#botones 
		margin-right 10px
		float right
		ul
			list-style none
			li
				display inline-block
			li:hover
				opacity 0.4
				cursor pointer
				transition 0.3s
	#secciones
		margin 35px 0 0 350px
		font-size 16px
		ul
			list-style none
			li
				display inline-block
				margin-left 30px
				transition 0.6s
			li:hover
				cursor pointer
				color nar
				margin-left 30px
				padding-bottom 10px
				border-bottom 15px solid nar
			a
				color #fff
				text-decoration none
section 
	padding-top 86px
	#slider
		h2
			color #BD4B1E
		h3
			font-size 24px
			color #2D4D6A
	#presentacion
		padding 45px 0 0 70px 
		color #666
	#titulares
		text-align center
		.cajaTit
			color #666
			display inline-block
			height 240px
			margin-left 30px
			padding 10px
			vertical-align middle
			width 300px
			a 
				text-decoration none
			h1
				color azTexto
				margin 0px
				font-size 16px
				text-align left
			p 
				text-align left		
		#ejecucionProyectos
			background #f6f6f6
		.lineaPuenteada
			color azTexto

	#pieTitulares
		color #E2EEF3
		margin-top 40px
		background azul
		height 300px
		width 100%
		#sociales
			margin-right 60px
			height 300px
			width 64px
			div
				margin 20px 0 30px 9px
				transition 0.5s
				img
					height 40px
			div:hover
				opacity 0.5
				cursor pointer
				transition 0.5s
				

		.cajaPieTit
			width 280px
			height 280px
			display inline-block
			vertical-align middle
		#cajaPieTit3
			padding-left 50px
			img
				vertical-align top
	#servicios
		Margen 0px
		Background #fff
		-webkit-box-shadow 0px 3px 4px -2px rgba(56,64,66,1)
		-moz-box-shadow 0px 3px 4px -2px rgba(56,64,66,1)
		box-shadow 0px 3px 4px -2px rgba(56,64,66,1)
		padding-bottom 20px
		h3
			Color #5D8CAC
			font-size 30pt
			Margin-left 45px
			Margin-top 40px
		.textosServicios
			p 
				color #666
				margin-left 45px
				font-size 12px
			.subtitulos
				color #5D8CAC
				font-size 14px
				margin-top 50px
				margin-left 45px
				
	#clientes
		text-align center
		p 
			Color #C7C7C7
			font-size 14px
			Margin-left 14px
			Margin-top 10px
			Margin-bottom 5px
			text-align left
		img
			margin 5px 14px 5px 14px

		
footer
	background azul
	border-top 2px solid #E2EEF3
	color #E2EEF3
	height 50px
	width 80%
	position absolute
	text-align right
	p 
		margin 0px 10px 2px 0

	img 
		float left
		height 48px

.propModal
	color #fff
	background azul
	padding 40px
	border-radius 3px
.contacto
	padding 20px
	width 400px	
	height 450px
	#cuadAdorno
		color #fa0
		font-size 28px
		margin-right 3px
	input
		border-radius 0
	textarea
		border-radius 0
	form
		padding-left 1em
	input[type="submit"]
		border-radius 3px
		float right
.cerrar
	cursor pointer
	float right
	font-size 12px
	padding-top 10px
.cerrar:hover
	color #fa0	

.cerrarFormulario
	cursor pointer
	font-size 12px
	padding-top 80px
	text-align right
.cerrarFormulario:hover
	color #fa0	



	